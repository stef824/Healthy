<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height_normal"
    android:layout_margin="@dimen/margin_tiny"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:stateListAnimator="@animator/card_touch_anim"
    app:cardCornerRadius="@dimen/card_corner_normal"
    app:cardElevation="@dimen/card_elevation_normal">

    <ImageView
        android:id="@+id/iv_hospital_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height_small"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_hospital_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_hospital_item_level"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_normal"
            tools:ignore="RtlHardcoded"/>

        <TextView
            android:id="@+id/tv_hospital_item_level"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:lines="1"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_normal"
            tools:ignore="RtlHardcoded"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>